{{import_globals}}

<div class="menu-group__inner menubox-group__inner">

  <div class="menu-group__header menubox-group__header">
    <div class="menu-group__header-inner menubox-group__header-inner">

      {{#if displayTitle}}
      <div class="menu-group__title menubox-group__title">
        <div class="menu-group__title-inner menubox-group__title-inner accessible-text-block js-heading" data-a11y-heading-type="menuGroup"></div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="menu-group__body menubox-group__body">
        <div class="menu-group__body-inner menubox-group__body-inner">
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="menu-group__instruction menubox-group__instruction">
        <div class="menu-group__instruction-inner menubox-group__instruction-inner">
          {{{compile instruction}}}
        </div>
      </div>
      {{/if}}

      <div class="menu-group__progress menubox-group__progress js-menu-item-progress">
        {{!-- Menu item progress bar will render in here --}}
      </div>

    </div>
  </div>

  <div class="menu-group__container menubox-group__container">
    <div class="menu-group__item-container-inner menubox-group__item-container-inner js-group-children" role="list">
      {{!-- Grouped menu items render here --}}
    </div>
  </div>

</div>
